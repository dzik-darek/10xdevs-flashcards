---
/**
 * Layout - Main application layout with Sidebar
 *
 * Used by all private/authenticated views
 * Provides AppShell structure: Sidebar + Main Content
 */
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";
import AppSidebar from "@/components/AppSidebar.astro";
import { getStats } from "@/lib/services/flashcard.service";

interface Props {
  title?: string;
}

const { title = "10xdevs Flashcards" } = Astro.props;

// ============================================================================
// Fetch User Statistics for Sidebar Badge
// ============================================================================

let studyCount = 0;

// Guard: Only fetch stats if user is authenticated
// This prevents errors on public pages that might accidentally use this layout
if (Astro.locals.user && Astro.locals.supabase) {
  try {
    const stats = await getStats(Astro.locals.supabase, Astro.locals.user.id);
    studyCount = stats.studyCount;
  } catch (error) {
    // Log error but don't block page render
    // Sidebar will display without badge if stats fetch fails
    if (error instanceof Error) {
      throw error;
    }
  }
}
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- AppShell: Sidebar + Main Content Grid -->
    <div class="flex h-screen overflow-hidden">
      <!-- Sidebar -->
      <AppSidebar studyCount={studyCount} />

      <!-- Main Content Area -->
      <main class="flex-1 overflow-y-auto">
        <slot />
      </main>
    </div>

    <Toaster client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
