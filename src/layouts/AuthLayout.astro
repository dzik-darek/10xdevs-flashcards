---
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";

interface Props {
  title?: string;
  description?: string;
}

const { title = "10xdevs Flashcards", description } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    {description && <meta name="description" content={description} />}
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-muted/30">
    <main class="container flex min-h-screen items-center justify-center py-8">
      <slot />
    </main>
    <Toaster client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
